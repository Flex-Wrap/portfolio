<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Welcome | Aaron B. Sanchez</title>
    <style>
      body {
        margin: 0;
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        background: #000; /* dark background */
        overflow: hidden;
        font-family: 'Inter', sans-serif;
      }

      h1 {
        font-size: 2rem;
        white-space: nowrap;
        border-right: 3px solid white;
        width: 0;
        overflow: hidden;
        color: white;
        position: relative;
        z-index: 1;
        animation: typing 3s steps(20, end) forwards, blink 0.7s step-end infinite;
      }

      @keyframes typing {
        from { width: 0 }
        to { width: 16ch } /* "Aaron B. Sanchez" length */
      }

      @keyframes blink {
        from, to { border-color: transparent }
        50% { border-color: white }
      }

      /* Circle overlay */
      .circle {
        position: fixed;
        top: 0;
        left: 0;
        width: 200vmax;   /* big enough to cover screen */
        height: 200vmax;
        border-radius: 50%;
        background: white;
        transform: scale(0);
        transform-origin: top left;
        z-index: 2;
        mix-blend-mode: difference; /* invert colors under circle */
        pointer-events: none;
      }

      .circle.grow {
        animation: grow 4s forwards;
      }

      @keyframes grow {
        to {
          transform: scale(1);
        }
      }
    </style>
  </head>
  <body>
    <h1 id="intro">Aaron B. Sanchez</h1>
    <div id="circle" class="circle"></div>

    <script>
      const circle = document.getElementById('circle');

      // wait for typing animation to finish (3s + 0.5s pause)
      setTimeout(() => {
        if (circle) {
          circle.classList.add('grow');
        }

        // after circle finishes growing, redirect
        setTimeout(() => {
          window.location.href = '/wall1';
        }, 2000); // grow duration
      }, 3500);
    </script>
  </body>
</html>
