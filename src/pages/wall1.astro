---
import WallLayout from "../layouts/WallLayout.astro";
import background from "../assets/climbing-wall.jpg";
import DotOverlay from "../components/DotOverlay";
import "../components/DotOverlay.css";
import * as CPHFFW from "../projects/CPHFW/Sections.astro";
---

<WallLayout leftHref="/wall3" rightHref="/wall2" background={background}>
  <DotOverlay client:visible x="20%" y="80%" color="blue">
    <CPHFFW.Description />
  </DotOverlay>
  <DotOverlay client:visible x="30%" y="70%" color="blue">
    <CPHFFW.Research />
  </DotOverlay>
  <DotOverlay client:visible x="40%" y="50%" color="blue">
    <CPHFFW.Design />
  </DotOverlay>
  <DotOverlay client:visible x="50%" y="40%" color="blue">
    <CPHFFW.Implementation />
  </DotOverlay>
</WallLayout>
